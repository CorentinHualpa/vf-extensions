export const FileUpload = {
    name: 'FileUpload',
    type: 'response',
    match: ({ trace }) => {
        // Utilisation plus robuste du match, similaire aux autres extensions
        return trace.type === 'file_upload' || trace.payload?.name === 'file_upload';
    },
    render: ({ trace, element }) => {
        try {
            console.log('FileUpload extension render');

            // Generate unique ID for this instance
            const uniqueId = 'fileUpload_' + Date.now();
            
            // Récupération des paramètres du payload avec valeurs par défaut
            const {
                maxFileSize = 10, // En Mo
                acceptedTypes = '*',
                uploadLabel = 'Cliquer pour téléverser ou glisser-déposer des fichiers',
                successMessage = 'Téléversement réussi!',
                loadingMessage = 'Téléversement en cours...',
                apiUrl = 'https://chatinnov-api-dev.proudsky-cdf9333b.francecentral.azurecontainerapps.io/documents_upload/'
            } = trace.payload || {};

            const container = document.createElement('div');
            container.innerHTML = `
                <style>
                    .upload-container {
                        padding: 20px;
                        border: 2px dashed #ccc;
                        border-radius: 5px;
                        text-align: center;
                        margin-bottom: 20px;
                        cursor: pointer;
                        transition: border-color 0.3s ease;
                    }
                    .upload-container:hover {
                        border-color: #2e7ff1;
                    }
                    .upload-input {
                        display: none;
                    }
                    .upload-label {
                        display: block;
                        margin-bottom: 10px;
                        color: #666;
                    }
                    .status-container {
                        padding: 10px;
                        border-radius: 5px;
                        margin-top: 10px;
                        display: none;
                    }
                    .success {
                        background-color: #4CAF50;
                        color: white;
                    }
                    .error {
                        background-color: #f44336;
                        color: white;
                    }
                    .loading {
                        background-color: #2196F3;
                        color: white;
                    }
                    .file-link {
                        color: white;
                        text-decoration: underline;
                        word-break: break-all;
                    }
                </style>
                <div class="upload-container">
                    <input type="file" class="upload-input" id="${uniqueId}" multiple accept="${acceptedTypes}">
                    <label for="${uniqueId}" class="upload-label">
                        ${uploadLabel}
                    </label>
                </div>
                <div class="status-container"></div>
            `;

            const uploadInput = container.querySelector('.upload-input');
            const statusContainer = container.querySelector('.status-container');
            const uploadContainer = container.querySelector('.upload-container');

            const showStatus = (message, type) => {
                statusContainer.textContent = message;
                statusContainer.className = 'status-container ' + type;
                statusContainer.style.display = 'block';
            };

            let isUploading = false;
            const handleUpload = async (files) => {
                if (!files || files.length === 0 || isUploading) {
                    return;
                }
                
                isUploading = true;
                
                // Vérifier la taille des fichiers
                for (const file of files) {
                    if (file.size > maxFileSize * 1024 * 1024) {
                        showStatus(`Le fichier "${file.name}" dépasse la taille maximale de ${maxFileSize}Mo`, 'error');
                        isUploading = false;
                        return;
                    }
                }

                showStatus(loadingMessage, 'loading');

                const formData = new FormData();
                Array.from(files).forEach((file) => {
                    formData.append('files', file);
                });

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        body: formData
                    });

                    const data = await response.json();
                    console.log('Upload response:', data);

                    if (response.ok) {
                        if (data.urls && data.urls.length > 0) {
                            const fileCount = data.urls.length;
                            statusContainer.innerHTML = `<div>${successMessage} (${fileCount} fichier(s))</div>`;
                            statusContainer.className = 'status-container success';

                            // Structure uniforme de la réponse, sans JSON.stringify supplémentaire
                            window.voiceflow.chat.interact({
                                type: 'complete',
                                payload: {
                                    success: true,
                                    urls: data.urls,
                                    fileCount: fileCount
                                }
                            });
                        } else {
                            throw new Error('Aucune URL retournée par le serveur');
                        }
                    } else {
                        const errorMessage = data.detail || 'Échec du téléversement';
                        throw new Error(errorMessage);
                    }
                } catch (error) {
                    console.error('Upload error:', error);
                    showStatus(`Erreur: ${error.message}`, 'error');

                    window.voiceflow.chat.interact({
                        type: 'complete',
                        payload: {
                            success: false,
                            error: error.message
                        }
                    });
                } finally {
                    isUploading = false;
                }
            };

            // Handle file select
            uploadInput.addEventListener('change', (event) => {
                handleUpload(event.target.files);
            });

            // Handle drag and drop
            uploadContainer.addEventListener('dragenter', (event) => {
                event.preventDefault();
                event.stopPropagation();
                uploadContainer.style.borderColor = '#2e7ff1';
            });

            uploadContainer.addEventListener('dragover', (event) => {
                event.preventDefault();
                event.stopPropagation();
                uploadContainer.style.borderColor = '#2e7ff1';
            });

            uploadContainer.addEventListener('dragleave', (event) => {
                event.preventDefault();
                event.stopPropagation();
                uploadContainer.style.borderColor = '#ccc';
            });

            uploadContainer.addEventListener('drop', (event) => {
                event.preventDefault();
                event.stopPropagation();
                uploadContainer.style.borderColor = '#ccc';
                handleUpload(event.dataTransfer.files);
            });

            element.appendChild(container);
            
            // Fonction de nettoyage pour éviter les fuites mémoire
            return () => {
                // Retirer tous les event listeners
                uploadInput.removeEventListener('change', handleUpload);
                uploadContainer.removeEventListener('dragenter', () => {});
                uploadContainer.removeEventListener('dragover', () => {});
                uploadContainer.removeEventListener('dragleave', () => {});
                uploadContainer.removeEventListener('drop', () => {});
            };

        } catch (error) {
            console.error('Error in FileUpload render:', error);
            
            // En cas d'erreur, informer Voiceflow pour éviter le blocage
            window.voiceflow.chat.interact({
                type: 'complete',
                payload: {
                    success: false,
                    error: 'Erreur interne de l\'extension FileUpload'
                }
            });
        }
    },
};
